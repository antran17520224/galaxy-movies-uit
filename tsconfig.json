{
	"compilerOptions": {
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"target": "es5",
		"lib": ["es5", "es2015", "es2017", "dom", "scripthost"],
		"skipLibCheck": true,
		"jsx": "react",
		"experimentalDecorators": true,
		"baseUrl": "types",
		"typeRoots": ["types"]
	},
	"include": ["./src/**/*", "./src/typing.d.ts"],
	"exclude": ["node_modules", "dist"]
}
